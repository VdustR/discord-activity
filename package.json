{
  "name": "discord-activity",
  "version": "0.1.1",
  "description": "A Discord activity manager.",
  "keywords": [
    "discord",
    "activity",
    "presense"
  ],
  "homepage": "https://github.com/VdustR/discord-activity",
  "bugs": {
    "url": "https://github.com/VdustR/discord-activity/issues"
  },
  "license": "MIT",
  "author": {
    "name": "ViPro",
    "email": "VdustR@gmail.com",
    "url": "https://VdustR.github.io"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/VdustR/discord-activity.git"
  },
  "private": true,
  "scripts": {
    "clear": "run-p clear:bin clear:dist",
    "clear:bin": "rimraf bin",
    "clear:dist": "rimraf dist",
    "watch": "yarn clear:dist && run-p watch:frontend watch:backend",
    "watch:frontend": "rollup -wc rollup.config.frontend.js --environment BUILD:development",
    "watch:backend": "tsc -w --project tsconfig.backend.json --outDir dist",
    "start": "electron .",
    "build": "yarn clear && run-p build:frontend build:backend && electron-builder build -m pkg mas -w nsis -l AppImage",
    "build:frontend": "rollup -c rollup.config.frontend.js",
    "build:backend": "tsc --project tsconfig.backend.json --outDir dist",
    "dist": "yarn clear && run-p build:frontend build:backend && electron-builder build -m pkg mas -w nsis -l AppImage -p always",
    "lint": "eslint \"src/**/*.{ts,tsx}\""
  },
  "main": "dist/main.js",
  "dependencies": {
    "discord-rpc": "^3.1.3",
    "victormono": "^1.4.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^9.1.1",
    "@commitlint/config-conventional": "^9.1.1",
    "@date-io/date-fns": "1.3.13",
    "@emotion/core": "^10.0.28",
    "@material-ui/core": "^4.11.0",
    "@material-ui/icons": "^4.9.1",
    "@material-ui/lab": "^4.0.0-alpha.56",
    "@material-ui/pickers": "^3.2.10",
    "@rollup/plugin-commonjs": "^14.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^8.4.0",
    "@types/discord-rpc": "^3.0.4",
    "@types/node": "^14.0.27",
    "@types/react": "^16.9.44",
    "@types/react-dom": "^16.9.8",
    "@typescript-eslint/eslint-plugin": "2.x",
    "@typescript-eslint/parser": "2.x",
    "babel-eslint": "10.x",
    "commitizen": "^4.1.2",
    "date-fns": "^2.15.0",
    "electron": "^9.1.2",
    "electron-builder": "^22.8.0",
    "emotion": "^10.0.27",
    "eslint": "6.x",
    "eslint-config-react-app": "^5.2.1",
    "eslint-plugin-flowtype": "4.x",
    "eslint-plugin-import": "2.x",
    "eslint-plugin-jsx-a11y": "6.x",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "7.x",
    "eslint-plugin-react-hooks": "2.x",
    "final-form": "^4.20.1",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "prettier-plugin-organize-imports": "^1.1.1",
    "pretty-quick": "^2.0.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-final-form": "^6.5.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.23.0",
    "rollup-plugin-terser": "^6.1.0",
    "rollup-plugin-typescript2": "^0.27.1",
    "typescript": "^4.0.0-beta",
    "typescript-styled-plugin": "^0.15.0"
  }
}
